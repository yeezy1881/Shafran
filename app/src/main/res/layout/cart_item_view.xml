<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    card_view:cardElevation="3dp"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:id="@+id/cv"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:paddingBottom="10dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/foodImage"
            android:background="@android:color/darker_gray"
            android:layout_centerVertical="true"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:id="@+id/foodName"
            android:text="Лагман-цомян"
            android:layout_alignTop="@+id/foodImage"
            android:layout_toRightOf="@+id/foodImage"
            android:layout_marginLeft="16dp"/>

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="+"
            android:id="@+id/plusBT"
            android:background="#f4f6f5"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#808183"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="6dp"/>

        <TextView
            android:background="#fbfbfb"
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:text="1"
            android:layout_toLeftOf="@id/plusBT"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:id="@+id/itemCount"
            android:layout_marginBottom="16dp"/>

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="-"
            android:id="@+id/minusBT"
            android:background="#f4f6f5"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/itemCount"
            android:textColor="#808183"
            android:layout_marginBottom="16dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/foodImage"
            android:text="350 тг"
            android:layout_centerVertical="true"
            android:id="@+id/itemPrice"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/itemTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#C0392b"
            android:text="1400 тг"
            android:layout_below="@+id/plusBT"
            android:layout_alignRight="@+id/plusBT"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kz.qstore.shafran.MenuFragment"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <!-- TODO: Update blank fragment layout -->



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstTextView"
        android:text="ПЕРВЫЕ БЛЮДА"
        android:textSize="24dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondTextView"
        android:text="ВТОРЫЕ БЛЮДА"
        android:textSize="24dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardList2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thirdTextView"
        android:text="САЛАТЫ"
        android:textSize="24dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardList3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fourthTextView"
        android:text="НАПИТКИ"
        android:textSize="24dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardList4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>

</ScrollView>
